# SwarmGrid Environment Configuration
# Copy this file to .env and update values for your environment
# NEVER commit .env to version control

# =============================================================================
# EDGE AGENT
# =============================================================================

# RTSP stream URL from your camera
# Format: rtsp://username:password@ip-address:port/path
RTSP_URL=rtsp://user:password@192.168.1.100:554/stream

# Unique identifiers for this camera/zone
CAMERA_ID=cam-01
ZONE_ID=zone-01

# Backend API URL (use container name in Docker, localhost for local dev)
BACKEND_URL=http://core-backend:5000

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# CORE BACKEND
# =============================================================================

# ASP.NET Core environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Development

# Database connection (update host for local dev: localhost instead of postgres)
ConnectionStrings__PostgreSQL=Host=postgres;Database=swarmgrid;Username=swarmgrid;Password=swarmgrid

# Redis connection (update host for local dev: localhost instead of redis)
ConnectionStrings__Redis=redis:6379

# =============================================================================
# DASHBOARD
# =============================================================================

# API URL for the dashboard to connect to
NEXT_PUBLIC_API_URL=http://localhost:5000

# Edge agent URL for live video stream
NEXT_PUBLIC_EDGE_AGENT_URL=http://localhost:8000

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL credentials
POSTGRES_USER=swarmgrid
POSTGRES_PASSWORD=swarmgrid
POSTGRES_DB=swarmgrid

# RabbitMQ
RABBITMQ_DEFAULT_USER=swarmgrid
RABBITMQ_DEFAULT_PASS=swarmgrid

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=swarmgrid
